<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- Font Families -->
  <Style>
    <Style.Resources>
      <FontFamily x:Key="PrimaryFontFamily">avares://Avalonia.Fonts.Inter/Assets/Inter-Regular.ttf#Inter</FontFamily>
      <FontFamily x:Key="MonoFontFamily">Consolas, Monaco, 'Courier New', monospace</FontFamily>
      
      <!-- Font Sizes -->
      <x:Double x:Key="FontSizeXSmall">10</x:Double>
      <x:Double x:Key="FontSizeSmall">12</x:Double>
      <x:Double x:Key="FontSizeNormal">14</x:Double>
      <x:Double x:Key="FontSizeMedium">16</x:Double>
      <x:Double x:Key="FontSizeLarge">18</x:Double>
      <x:Double x:Key="FontSizeXLarge">20</x:Double>
      <x:Double x:Key="FontSizeXXLarge">24</x:Double>
      <x:Double x:Key="FontSizeXXXLarge">32</x:Double>
    </Style.Resources>
  </Style>

  <!-- Text Styles -->
  <Style Selector="TextBlock.HeadingXLarge">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXXXLarge}" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="LineHeight" Value="1.2" />
  </Style>

  <Style Selector="TextBlock.HeadingLarge">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXXLarge}" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="LineHeight" Value="1.3" />
  </Style>

  <Style Selector="TextBlock.HeadingMedium">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXLarge}" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="LineHeight" Value="1.4" />
  </Style>

  <Style Selector="TextBlock.HeadingSmall">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}" />
    <Setter Property="FontWeight" Value="Medium" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="LineHeight" Value="1.4" />
  </Style>

  <Style Selector="TextBlock.BodyLarge">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <Style Selector="TextBlock.BodyMedium">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <Style Selector="TextBlock.BodySmall">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    <Setter Property="LineHeight" Value="1.4" />
  </Style>

  <Style Selector="TextBlock.CaptionText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXSmall}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}" />
    <Setter Property="LineHeight" Value="1.3" />
  </Style>

  <Style Selector="TextBlock.MonospaceText">
    <Setter Property="FontFamily" Value="{StaticResource MonoFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    <Setter Property="LineHeight" Value="1.4" />
  </Style>

  <!-- Status Text Styles -->
  <Style Selector="TextBlock.SuccessText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <Style Selector="TextBlock.WarningText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource WarningBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <Style Selector="TextBlock.ErrorText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <Style Selector="TextBlock.InfoText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource InfoBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <!-- Vulnerability Severity Text Styles -->
  <Style Selector="TextBlock.CriticalText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{StaticResource CriticalBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <Style Selector="TextBlock.HighText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="Medium" />
    <Setter Property="Foreground" Value="{StaticResource HighBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <Style Selector="TextBlock.MediumText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource MediumBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <Style Selector="TextBlock.LowText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource LowBrush}" />
    <Setter Property="LineHeight" Value="1.5" />
  </Style>

  <!-- Brand Text -->
  <Style Selector="TextBlock.BrandText">
    <Setter Property="FontFamily" Value="{StaticResource PrimaryFontFamily}" />
    <Setter Property="FontSize" Value="{StaticResource FontSizeXLarge}" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
    <Setter Property="LineHeight" Value="1.4" />
  </Style>

</Styles>