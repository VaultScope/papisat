<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- MODERN PURPLE COLOR PALETTE -->
    <!-- Dark Theme Colors -->
    <Color x:Key="BackgroundPrimary">#FF0A0A0A</Color>        <!-- Deep Black -->
    <Color x:Key="BackgroundSecondary">#FF121212</Color>      <!-- Dark Gray -->
    <Color x:Key="BackgroundTertiary">#FF1A1A1A</Color>       <!-- Lighter Gray -->
    <Color x:Key="BackgroundElevated">#FF1F1F1F</Color>       <!-- Card Background -->
    <Color x:Key="BackgroundGlass">#2A1F1F1F</Color>          <!-- Glass Background -->
    
    <!-- Purple Color Scheme -->
    <Color x:Key="PurplePrimary">#FF8B5CF6</Color>            <!-- Main Purple -->
    <Color x:Key="PurpleSecondary">#FFA78BFA</Color>          <!-- Light Purple -->
    <Color x:Key="PurpleAccent">#FFC084FC</Color>             <!-- Accent Purple -->
    <Color x:Key="PurpleDark">#FF7C3AED</Color>               <!-- Dark Purple -->
    <Color x:Key="PurpleLight">#FFE4D3F7</Color>              <!-- Very Light Purple -->
    <Color x:Key="PurpleGlow">#4D8B5CF6</Color>               <!-- Purple with transparency for glow -->
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFFFF</Color>              <!-- White -->
    <Color x:Key="TextSecondary">#FFB4B4B4</Color>            <!-- Light Gray -->
    <Color x:Key="TextTertiary">#FF737373</Color>             <!-- Medium Gray -->
    <Color x:Key="TextDisabled">#FF4A4A4A</Color>             <!-- Dark Gray -->
    
    <!-- Border Colors -->
    <Color x:Key="BorderLight">#FF2A2A2A</Color>              <!-- Light border -->
    <Color x:Key="BorderMedium">#FF404040</Color>             <!-- Medium border -->
    <Color x:Key="BorderDark">#FF1A1A1A</Color>               <!-- Dark border -->
    <Color x:Key="BorderGlass">#33FFFFFF</Color>              <!-- Glass border -->
    
    <!-- Status Colors -->
    <Color x:Key="Success">#FF10B981</Color>                  <!-- Green -->
    <Color x:Key="Warning">#FFF59E0B</Color>                  <!-- Amber -->
    <Color x:Key="Error">#FFEF4444</Color>                    <!-- Red -->
    <Color x:Key="Info">#FF3B82F6</Color>                     <!-- Blue -->
    
    <!-- Glass Effect Colors -->
    <Color x:Key="GlassBackground">#1A1F1F1F</Color>          <!-- Subtle glass background -->
    <Color x:Key="GlassBorder">#33FFFFFF</Color>              <!-- Glass border -->
    <Color x:Key="GlassHighlight">#1AFFFFFF</Color>           <!-- Glass highlight -->
    <Color x:Key="GlassShadow">#80000000</Color>              <!-- Glass shadow -->
    
    <!-- LIGHT THEME COLORS -->
    <Color x:Key="LightBackgroundPrimary">#FFFFFFFF</Color>
    <Color x:Key="LightBackgroundSecondary">#FFF8FAFC</Color>
    <Color x:Key="LightBackgroundTertiary">#FFF1F5F9</Color>
    <Color x:Key="LightBackgroundElevated">#FFFFFFFF</Color>
    <Color x:Key="LightBackgroundGlass">#E6FFFFFF</Color>
    
    <Color x:Key="LightTextPrimary">#FF0F172A</Color>
    <Color x:Key="LightTextSecondary">#FF475569</Color>
    <Color x:Key="LightTextTertiary">#FF94A3B8</Color>
    <Color x:Key="LightTextDisabled">#FFCBD5E1</Color>
    
    <Color x:Key="LightBorderLight">#FFE2E8F0</Color>
    <Color x:Key="LightBorderMedium">#FFCBD5E1</Color>
    <Color x:Key="LightBorderDark">#FF94A3B8</Color>
    <Color x:Key="LightBorderGlass">#33000000</Color>
    
    <Color x:Key="LightGlassBackground">#E6FFFFFF</Color>
    <Color x:Key="LightGlassBorder">#19000000</Color>
    <Color x:Key="LightGlassHighlight">#FFFFFFFF</Color>
    <Color x:Key="LightGlassShadow">#40000000</Color>
    
    <!-- BRUSHES -->
    <SolidColorBrush x:Key="PurplePrimaryBrush" Color="{DynamicResource PurplePrimary}"/>
    <SolidColorBrush x:Key="PurpleSecondaryBrush" Color="{DynamicResource PurpleSecondary}"/>
    <SolidColorBrush x:Key="PurpleAccentBrush" Color="{DynamicResource PurpleAccent}"/>
    <SolidColorBrush x:Key="PurpleDarkBrush" Color="{DynamicResource PurpleDark}"/>
    <SolidColorBrush x:Key="PurpleLightBrush" Color="{DynamicResource PurpleLight}"/>
    
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{DynamicResource BackgroundPrimary}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{DynamicResource BackgroundSecondary}"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{DynamicResource BackgroundTertiary}"/>
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="{DynamicResource BackgroundElevated}"/>
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{DynamicResource TextTertiary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{DynamicResource TextDisabled}"/>
    
    <SolidColorBrush x:Key="BorderLightBrush" Color="{DynamicResource BorderLight}"/>
    <SolidColorBrush x:Key="BorderMediumBrush" Color="{DynamicResource BorderMedium}"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{DynamicResource BorderDark}"/>
    <SolidColorBrush x:Key="BorderGlassBrush" Color="{DynamicResource BorderGlass}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{DynamicResource Error}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{DynamicResource Info}"/>
    
    <!-- GRADIENT BRUSHES -->
    <LinearGradientBrush x:Key="PurpleGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource PurplePrimary}" Offset="0"/>
        <GradientStop Color="{DynamicResource PurpleAccent}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="PurpleGlowBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource PurpleGlow}" Offset="0"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GlassGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource GlassBackground}" Offset="0"/>
        <GradientStop Color="#0A1F1F1F" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- RADIAL GRADIENTS FOR DEPTH -->
    <RadialGradientBrush x:Key="GlassRadialBrush" Center="0.5,0.3" RadiusX="1.2" RadiusY="1.2">
        <GradientStop Color="{DynamicResource GlassHighlight}" Offset="0"/>
        <GradientStop Color="{DynamicResource GlassBackground}" Offset="0.7"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- CORNER RADIUS VALUES - Enhanced for Modern Look -->
    <CornerRadius x:Key="CornerRadiusXS">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusS">12</CornerRadius>
    <CornerRadius x:Key="CornerRadiusM">16</CornerRadius>
    <CornerRadius x:Key="CornerRadiusL">20</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXL">28</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXXL">36</CornerRadius>
    <CornerRadius x:Key="CornerRadiusPill">50</CornerRadius>
    
    <!-- SPACING VALUES -->
    <Thickness x:Key="SpacingXS">4</Thickness>
    <Thickness x:Key="SpacingS">8</Thickness>
    <Thickness x:Key="SpacingM">12</Thickness>
    <Thickness x:Key="SpacingL">16</Thickness>
    <Thickness x:Key="SpacingXL">20</Thickness>
    <Thickness x:Key="SpacingXXL">24</Thickness>
    <Thickness x:Key="SpacingXXXL">32</Thickness>
    
    <!-- FONT SIZES -->
    <sys:Double x:Key="FontSizeXS" xmlns:sys="clr-namespace:System;assembly=mscorlib">10</sys:Double>
    <sys:Double x:Key="FontSizeS" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
    <sys:Double x:Key="FontSizeM" xmlns:sys="clr-namespace:System;assembly=mscorlib">14</sys:Double>
    <sys:Double x:Key="FontSizeL" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="FontSizeXL" xmlns:sys="clr-namespace:System;assembly=mscorlib">20</sys:Double>
    <sys:Double x:Key="FontSizeXXL" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>
    <sys:Double x:Key="FontSizeXXXL" xmlns:sys="clr-namespace:System;assembly=mscorlib">32</sys:Double>
    
    <!-- FONT FAMILIES -->
    <FontFamily x:Key="PrimaryFont">Segoe UI Variable Display, Segoe UI, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="MonospaceFont">JetBrains Mono, Consolas, Monaco, monospace</FontFamily>
    
    <!-- SHADOW EFFECTS -->
    <DropShadowEffect x:Key="ElevationLow" 
                      Color="{DynamicResource GlassShadow}" 
                      Direction="270" 
                      ShadowDepth="2" 
                      BlurRadius="8" 
                      Opacity="0.3"/>
    
    <DropShadowEffect x:Key="ElevationMedium" 
                      Color="{DynamicResource GlassShadow}" 
                      Direction="270" 
                      ShadowDepth="4" 
                      BlurRadius="16" 
                      Opacity="0.4"/>
    
    <DropShadowEffect x:Key="ElevationHigh" 
                      Color="{DynamicResource GlassShadow}" 
                      Direction="270" 
                      ShadowDepth="8" 
                      BlurRadius="24" 
                      Opacity="0.5"/>
    
    <DropShadowEffect x:Key="GlowPurple" 
                      Color="{DynamicResource PurpleGlow}" 
                      Direction="270" 
                      ShadowDepth="0" 
                      BlurRadius="20" 
                      Opacity="0.6"/>
    
    <!-- ANIMATION DURATIONS -->
    <Duration x:Key="AnimationFast">0:0:0.15</Duration>
    <Duration x:Key="AnimationNormal">0:0:0.25</Duration>
    <Duration x:Key="AnimationSlow">0:0:0.4</Duration>
    
    <!-- EASING FUNCTIONS - Enhanced for Smooth Animations -->
    <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
    <CubicEase x:Key="EaseIn" EasingMode="EaseIn"/>
    <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
    <QuadraticEase x:Key="EaseQuad" EasingMode="EaseOut"/>
    <BackEase x:Key="EaseBack" EasingMode="EaseOut" Amplitude="0.3"/>
    <BackEase x:Key="EaseBackIn" EasingMode="EaseIn" Amplitude="0.4"/>
    <ElasticEase x:Key="EaseElastic" EasingMode="EaseOut" Oscillations="1" Springiness="0.3"/>
    <BounceEase x:Key="EaseBounce" EasingMode="EaseOut" Bounces="2" Bounciness="0.4"/>
    
    <!-- THEME SWITCHING PROPERTIES -->
    <sys:Boolean x:Key="IsDarkTheme" xmlns:sys="clr-namespace:System;assembly=mscorlib">True</sys:Boolean>
    
</ResourceDictionary>