<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Light Theme Color Palette -->
    <Color x:Key="LightPrimary">#ffffff</Color>
    <Color x:Key="LightSecondary">#f8f9fa</Color>
    <Color x:Key="LightTertiary">#e9ecef</Color>
    <Color x:Key="LightQuaternary">#dee2e6</Color>
    <Color x:Key="LightSurface">#ffffff</Color>
    <Color x:Key="LightGlass">#ffffff80</Color>
    <Color x:Key="LightBorder">#e5e7eb</Color>
    <Color x:Key="LightText">#111827</Color>
    <Color x:Key="LightTextSecondary">#6b7280</Color>
    <Color x:Key="LightTextTertiary">#9ca3af</Color>

    <!-- Purple Accent System -->
    <Color x:Key="Purple50">#faf5ff</Color>
    <Color x:Key="Purple100">#f3e8ff</Color>
    <Color x:Key="Purple200">#e9d5ff</Color>
    <Color x:Key="Purple300">#d8b4fe</Color>
    <Color x:Key="Purple400">#c084fc</Color>
    <Color x:Key="Purple500">#a855f7</Color>
    <Color x:Key="Purple600">#9333ea</Color>
    <Color x:Key="Purple700">#7c3aed</Color>
    <Color x:Key="Purple800">#6b21a8</Color>
    <Color x:Key="Purple900">#581c87</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Success">#10b981</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Error">#ef4444</Color>
    <Color x:Key="Info">#3b82f6</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource LightPrimary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource LightSecondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{DynamicResource LightTertiary}"/>
    <SolidColorBrush x:Key="QuaternaryBrush" Color="{DynamicResource LightQuaternary}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{DynamicResource LightSurface}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource LightBorder}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource LightText}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource LightTextSecondary}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{DynamicResource LightTextTertiary}"/>

    <!-- Purple Accent Brushes -->
    <SolidColorBrush x:Key="Purple50Brush" Color="{DynamicResource Purple50}"/>
    <SolidColorBrush x:Key="Purple100Brush" Color="{DynamicResource Purple100}"/>
    <SolidColorBrush x:Key="Purple200Brush" Color="{DynamicResource Purple200}"/>
    <SolidColorBrush x:Key="Purple300Brush" Color="{DynamicResource Purple300}"/>
    <SolidColorBrush x:Key="Purple400Brush" Color="{DynamicResource Purple400}"/>
    <SolidColorBrush x:Key="Purple500Brush" Color="{DynamicResource Purple500}"/>
    <SolidColorBrush x:Key="Purple600Brush" Color="{DynamicResource Purple600}"/>
    <SolidColorBrush x:Key="Purple700Brush" Color="{DynamicResource Purple700}"/>
    <SolidColorBrush x:Key="Purple800Brush" Color="{DynamicResource Purple800}"/>
    <SolidColorBrush x:Key="Purple900Brush" Color="{DynamicResource Purple900}"/>

    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{DynamicResource Error}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{DynamicResource Info}"/>

    <!-- Glass Effect Brushes -->
    <SolidColorBrush x:Key="GlassBrush" Color="{DynamicResource LightGlass}" Opacity="0.5"/>
    
    <!-- Gradient Brushes for Glass Effects -->
    <LinearGradientBrush x:Key="GlassGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#ffffff60" Offset="0"/>
        <GradientStop Color="#ffffff80" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassHoverBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#f8f9fa60" Offset="0"/>
        <GradientStop Color="#f8f9fa80" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassPressedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#e9ecef60" Offset="0"/>
        <GradientStop Color="#e9ecef80" Offset="1"/>
    </LinearGradientBrush>

    <!-- Typography System -->
    <FontFamily x:Key="PrimaryFont">Inter, SF Pro Display, Segoe UI Variable, system-ui</FontFamily>
    <FontFamily x:Key="MonospaceFont">JetBrains Mono, Cascadia Code, Consolas</FontFamily>

    <!-- Type Scale -->
    <sys:Double x:Key="Text12">12</sys:Double>
    <sys:Double x:Key="Text14">14</sys:Double>
    <sys:Double x:Key="Text16">16</sys:Double>
    <sys:Double x:Key="Text18">18</sys:Double>
    <sys:Double x:Key="Text21">21</sys:Double>
    <sys:Double x:Key="Text28">28</sys:Double>
    <sys:Double x:Key="Text37">37</sys:Double>
    <sys:Double x:Key="Text49">49</sys:Double>

    <!-- Spacing System -->
    <sys:Double x:Key="Space4">4</sys:Double>
    <sys:Double x:Key="Space8">8</sys:Double>
    <sys:Double x:Key="Space12">12</sys:Double>
    <sys:Double x:Key="Space16">16</sys:Double>
    <sys:Double x:Key="Space20">20</sys:Double>
    <sys:Double x:Key="Space24">24</sys:Double>
    <sys:Double x:Key="Space32">32</sys:Double>
    <sys:Double x:Key="Space40">40</sys:Double>
    <sys:Double x:Key="Space48">48</sys:Double>
    <sys:Double x:Key="Space64">64</sys:Double>

    <!-- Shadow Effects -->
    <DropShadowEffect x:Key="CardShadow" 
                      Color="Black" 
                      Direction="270" 
                      ShadowDepth="4" 
                      BlurRadius="24" 
                      Opacity="0.08"/>

    <DropShadowEffect x:Key="ButtonShadow" 
                      Color="Black" 
                      Direction="270" 
                      ShadowDepth="2" 
                      BlurRadius="8" 
                      Opacity="0.05"/>

    <DropShadowEffect x:Key="ElevatedShadow" 
                      Color="Black" 
                      Direction="270" 
                      ShadowDepth="8" 
                      BlurRadius="32" 
                      Opacity="0.12"/>

    <!-- Border Radius -->
    <CornerRadius x:Key="BorderRadius4">4</CornerRadius>
    <CornerRadius x:Key="BorderRadius8">8</CornerRadius>
    <CornerRadius x:Key="BorderRadius12">12</CornerRadius>
    <CornerRadius x:Key="BorderRadius16">16</CornerRadius>
    <CornerRadius x:Key="BorderRadius24">24</CornerRadius>

    <!-- Animation Durations -->
    <Duration x:Key="FastDuration">0:0:0.15</Duration>
    <Duration x:Key="NormalDuration">0:0:0.25</Duration>
    <Duration x:Key="SlowDuration">0:0:0.3</Duration>

    <!-- Easing Functions -->
    <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
    <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
    <BackEase x:Key="BackEaseOut" EasingMode="EaseOut" Amplitude="0.5"/>

</ResourceDictionary>