<UserControl x:Class="VaultScope.Enterprise.WPF.UserControls.GlassmorphismSidebar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="280">

    <!-- SIMPLE SIDEBAR -->
    <Border Background="#FF1A1A1A" BorderBrush="#FF333333" BorderThickness="0,0,1,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="16">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="VaultScope"
                               FontFamily="Segoe UI"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Enterprise Security"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#CCCCCC"/>
                </StackPanel>
            </Grid>
            
            <!-- NAVIGATION -->
            <StackPanel Grid.Row="1" Margin="8,16,8,16">
                
                <!-- Dashboard -->
                <Border Name="DashboardButton"
                        Background="#FF8B5CF6"
                        CornerRadius="4"
                        Height="48"
                        Margin="0,2"
                        Cursor="Hand"
                        MouseDown="DashboardButton_Click">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="&#xE80F;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="Dashboard"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Scanner -->
                <Border Name="ScannerButton"
                        Background="#FF2D2D2D"
                        CornerRadius="4"
                        Height="48"
                        Margin="0,2"
                        Cursor="Hand"
                        MouseDown="ScannerButton_Click">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="&#xE72C;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="Scanner"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Reports -->
                <Border Name="ReportsButton"
                        Background="#FF2D2D2D"
                        CornerRadius="4"
                        Height="48"
                        Margin="0,2"
                        Cursor="Hand"
                        MouseDown="ReportsButton_Click">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="&#xE9F9;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="Reports"
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Separator -->
                <Border Height="1" Background="#FF333333" Margin="8,16"/>
                
                <!-- Quick Scan -->
                <Border Name="QuickScanButton"
                        Background="#FF2D2D2D"
                        CornerRadius="4"
                        Height="40"
                        Margin="0,2"
                        Cursor="Hand"
                        MouseDown="QuickScanButton_Click">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="&#xE945;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="Quick Scan"
                                   FontFamily="Segoe UI"
                                   FontSize="13"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Settings -->
                <Border Name="SettingsButton"
                        Background="#FF2D2D2D"
                        CornerRadius="4"
                        Height="40"
                        Margin="0,2"
                        Cursor="Hand"
                        MouseDown="SettingsButton_Click">
                    <Grid Margin="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="&#xE713;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="Settings"
                                   FontFamily="Segoe UI"
                                   FontSize="13"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
            </StackPanel>
            
            <!-- FOOTER -->
            <Border Grid.Row="2" Background="#FF2A2A2A" Padding="16,12">
                <StackPanel>
                    <TextBlock Text="VaultScope Enterprise"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="White"/>
                    <TextBlock Text="Version 1.0.0"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               Foreground="#CCCCCC"/>
                </StackPanel>
            </Border>
            
        </Grid>
    </Border>
    
</UserControl>